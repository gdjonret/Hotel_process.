    <script>
        // Set minimum date for arrival date to today
        const today = new Date().toISOString().split('T')[0];
        document.querySelector('input[name="arrivalDate"]').min = today;
        
        // Update departure date minimum when arrival date is selected
        document.querySelector('input[name="arrivalDate"]').addEventListener('change', function() {
            document.querySelector('input[name="departureDate"]').min = this.value;
        });
    </script>
    <script>
        document.getElementById('availabilityForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Store the form data
            const arrivalDate = document.getElementById('arrivalDate').value;
            const departureDate = document.getElementById('departureDate').value;
            const adults = document.getElementById('adults').value;
            
            // Store in session storage
            sessionStorage.setItem('checkin', arrivalDate);
            sessionStorage.setItem('checkout', departureDate);
            sessionStorage.setItem('guests', adults);
            
            // Redirect to book now page
            window.location.href = '/BookNow';
        });
    </script>
    <script>
        // Smooth scroll for Contact Us button
        document.querySelector('a[href="#contact"]').addEventListener('click', function(e) {
            e.preventDefault();
            document.querySelector('#contact').scrollIntoView({
                behavior: 'smooth'
            });
        });
    </script>
