<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - Hotel Le Process</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/BookNow.css">
    <link rel="stylesheet" href="/css/GuestDetails.css">
    <style>
        .guest-details-review {
            padding: 20px 0;
            border-bottom: 1px solid #e0e0e0;
        }
        .detail-item {
            margin-bottom: 20px;
        }
        .detail-item label {
            font-size: 0.9em;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
        }
        .detail-item p {
            margin: 0;
            color: #333;
            font-size: 1.1em;
        }
        .detail-item i {
            margin-right: 8px;
            color: #495057;
            font-size: 0.9em;
        }
        .section-title {
            color: #2c3e50;
            font-size: 1.5em;
            font-weight: 300;
            margin-bottom: 30px;
            text-align: center;
            position: relative;
        }
        .section-title:after {
            content: '';
            display: block;
            width: 50px;
            height: 2px;
            background: #007bff;
            margin: 15px auto 0;
        }
        .payment-options {
            margin-top: 40px;
            padding-top: 20px;
        }
        .payment-options .alert {
            border: none;
            background-color: #f8f9fa;
            border-left: 4px solid #17a2b8;
        }
        .payment-options ul {
            list-style-type: none;
            padding-left: 20px;
            margin-top: 15px;
        }
        .payment-options ul li {
            margin-bottom: 8px;
            color: #495057;
        }
        .payment-options ul li:before {
            content: "âœ“";
            margin-right: 10px;
            color: #28a745;
        }
        .button-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 30px;
            padding: 0;
        }
        .button-group .btn {
            min-width: 120px;
            padding: 12px 25px;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        .button-group .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }
        .button-group .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
        .button-group .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
        }
        .button-group .btn-primary:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
        .button-group .btn i {
            margin: 0 8px;
        }
        @media (max-width: 576px) {
            .button-group {
                flex-direction: column;
                gap: 15px;
            }
            .button-group .btn {
                width: 100%;
            }
        }
        .detail-section {
            margin-bottom: 30px;
        }
        .detail-section-title {
            font-size: 1.1em;
            color: #2c3e50;
            margin-bottom: 15px;
            padding-bottom: 8px;
            border-bottom: 1px solid #eee;
        }
    </style>
</head>
<body>
    <%- include("../partials/navbar.ejs") %>
    <div class="room-image">
        <img src="/images/h1.jpg" alt="Standard Room">
    </div>
    <div class="container">
        <%- include("../partials/progress-steps.ejs", {currentStep: 3}) %>

        <div class="row">
            <!-- Left Column: Booking Summary -->
            <div class="col-md-4">
                <%- include("../partials/booking-summary.ejs") %>
            </div>

            <!-- Right Column: Guest Details Review and Payment Options -->
            <div class="col-md-8">
                <div class="booking-details-form">
                    <!-- Guest Details Review Section -->
                    <h2 class="section-title">Guest Details Review</h2>
                    <div class="guest-details-review">
                        <!-- Personal Information -->
                        <div class="detail-section">
                            <h3 class="detail-section-title">Personal Information</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-item">
                                        <label><i class="fas fa-user"></i> First Name</label>
                                        <p id="reviewFirstName">Loading...</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-item">
                                        <label><i class="fas fa-user"></i> Last Name</label>
                                        <p id="reviewLastName">Loading...</p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-item">
                                        <label><i class="fas fa-envelope"></i> Email</label>
                                        <p id="reviewEmail">Loading...</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-item">
                                        <label><i class="fas fa-phone"></i> Phone</label>
                                        <p id="reviewPhone">Loading...</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Address Information -->
                        <div class="detail-section">
                            <h3 class="detail-section-title">Address Information</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="detail-item">
                                        <label><i class="fas fa-map-marker-alt"></i> Address</label>
                                        <p id="reviewAddress">Loading...</p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="detail-item">
                                        <label><i class="fas fa-city"></i> City</label>
                                        <p id="reviewCity">Loading...</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="detail-item">
                                        <label><i class="fas fa-globe"></i> Country</label>
                                        <p id="reviewCountry">Loading...</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="detail-item">
                                        <label><i class="fas fa-mail-bulk"></i> ZIP</label>
                                        <p id="reviewZip">Loading...</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Information -->
                        <div class="detail-section">
                            <h3 class="detail-section-title">Additional Information</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="detail-item">
                                        <label><i class="fas fa-comment"></i> Special Requests</label>
                                        <p id="reviewSpecialRequests">Loading...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Options Section -->
                    <div class="payment-options">
                        <h2 class="section-title">Payment Options</h2>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Payment will be collected at check-in. You can pay using:
                            <ul>
                                <li>Credit/Debit Card</li>
                                <li>Cash</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="button-group mt-4">
                        <button type="button" class="btn btn-secondary" onclick="goBackToGuestDetails()">
                            <i class="fas fa-arrow-left"></i> Back
                        </button>
                        <button type="button" class="btn btn-primary" onclick="proceedToConfirmation()">
                            Submit <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="/js/booking-utils.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadBookingSummary();
            loadGuestDetailsReview();
        });

        function loadGuestDetailsReview() {
            const guestDetails = loadGuestDetails();
            
            // Update review fields
            document.getElementById('reviewFirstName').textContent = guestDetails.firstName || 'N/A';
            document.getElementById('reviewLastName').textContent = guestDetails.lastName || 'N/A';
            document.getElementById('reviewEmail').textContent = guestDetails.email || 'N/A';
            document.getElementById('reviewPhone').textContent = guestDetails.phone || 'N/A';
            document.getElementById('reviewAddress').textContent = guestDetails.address || 'N/A';
            document.getElementById('reviewCity').textContent = guestDetails.city || 'N/A';
            document.getElementById('reviewCountry').textContent = guestDetails.country || 'N/A';
            document.getElementById('reviewZip').textContent = guestDetails.zip || 'N/A';
            document.getElementById('reviewSpecialRequests').textContent = guestDetails.specialRequests || 'None';
        }

        function goBackToGuestDetails() {
            window.location.href = '/GuestDetails';
        }

        function proceedToConfirmation() {
            // Set payment status as completed since we're collecting payment at check-in
            localStorage.setItem('paymentStatus', 'completed');
            window.location.href = '/confirmation';
        }
    </script>
</body>
</html>
