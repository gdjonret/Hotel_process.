<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Now - Hotel Le Process</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <!-- Flatpickr Theme -->
    <link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/material_green.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/BookNow.css">
</head>

<body>
    <%- include("../partials/navbar.ejs") %>

    <div class="room-image">
        <img src="/images/h1.jpg" alt="Standard Room">
    </div>

    <div class="container">
        <div class="steps">
            <div class="step">
                <span class="circle active">1</span>
                <p>SELECT ROOM</p>
            </div>
            <div class="step">
                <span class="circle">2</span>
                <p>BOOKING</p>
            </div>
            <div class="step">
                <span class="circle">3</span>
                <p>CHECKOUT</p>
            </div>
            <div class="step">
                <span class="circle">4</span>
                <p>THANK YOU</p>
            </div>
            <div class="progress-bar">
                <span class="indicator"></span>
            </div>
        </div>
    
        <div class="row">
            <!-- Left Column: Date Picker -->
            <div class="col-md-4">
                <div class="booking-form">
                    <form id="searchForm">
                        <h2>Find Your Perfect Stay</h2>
                        <div id="booking-warning" class="alert alert-danger" style="display: none;">
                            <i class="fas fa-exclamation-triangle"></i> Please fill in all required fields
                        </div>
                        <div class="form-group">
                            <label for="checkin">
                                <i class="fas fa-calendar-check"></i>
                                Check-in Date *
                            </label>
                            <input type="text" id="checkin" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="checkout">
                                <i class="fas fa-calendar-alt"></i>
                                Check-out Date *
                            </label>
                            <input type="text" id="checkout" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="adults">
                                <i class="fas fa-users"></i>
                                Number of Guests *
                            </label>
                            <select id="adults" class="form-control" required>
                                <option value="" disabled selected>Select number of guests</option>
                                <option value="1">1 Guest</option>
                                <option value="2">2 Guests</option>
                                <option value="3">3 Guests</option>
                                <option value="4">4 Guests</option>
                                <option value="5">5 Guests</option>
                                <option value="6">6+ Guests</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary check-rooms-btn">
                            <i class="fas fa-search"></i>
                            Find Available Rooms
                        </button>
                    </form>
                </div>
            </div>

            <!-- Right Column: Room Listings -->
            <div class="col-md-8">
                <div class="sorting-options">
                    <div class="d-flex">
                        <button class="btn btn-outline-secondary" onclick="sortRooms('price', 'asc')">
                            <i class="fas fa-sort-amount-down-alt"></i>Price: Low to High
                        </button>
                        <button class="btn btn-outline-secondary" onclick="sortRooms('price', 'desc')">
                            <i class="fas fa-sort-amount-up"></i>Price: High to Low
                        </button>
                        <button class="btn btn-outline-secondary" onclick="sortRooms('size', 'asc')">
                            <i class="fas fa-compress-arrows-alt"></i>Size: Small to Large
                        </button>
                        <button class="btn btn-outline-secondary" onclick="sortRooms('size', 'desc')">
                            <i class="fas fa-expand-arrows-alt"></i>Size: Large to Small
                        </button>
                    </div>
                </div>

                <!-- Room 1 -->
                <div class="room-container">
                    <div class="room-image">
                        <img src="/images/room-1.jpg" alt="Standard Room" class="img-fluid rounded">
                    </div>
                    <div class="room-details" data-price="99">
                        <h2>STANDARD ROOM</h2>
                        <p><i class="fas fa-ruler-combined icon"></i><strong>Size:</strong> 28 sqm</p>
                        <p><i class="fas fa-users icon"></i><strong>Max Occupancy:</strong> 2 + 1</p>
                        <p><i class="fas fa-wifi icon"></i><strong>Wifi:</strong> Complimentary high-speed wifi</p>
                        <p><i class="fas fa-dollar-sign icon"></i><strong>Price:</strong> $99/night</p>
                        <div class="room-buttons mt-4">
                            <button class="btn btn-primary book-now-btn">BOOK NOW</button>
                        </div>
                    </div>
                </div>

                <!-- Room 2 -->
                <div class="room-container">
                    <div class="room-image">
                        <img src="/images/room2.jpg" alt="Deluxe Room" class="img-fluid rounded">
                    </div>
                    <div class="room-details" data-price="149">
                        <h2>DELUXE ROOM</h2>
                        <p><i class="fas fa-ruler-combined icon"></i><strong>Size:</strong> 35 sqm</p>
                        <p><i class="fas fa-users icon"></i><strong>Max Occupancy:</strong> 3</p>
                        <p><i class="fas fa-wifi icon"></i><strong>Wifi:</strong> Complimentary high-speed wifi</p>
                        <p><i class="fas fa-dollar-sign icon"></i><strong>Price:</strong> $149/night</p>
                        <div class="room-buttons mt-4">
                            <button class="btn btn-primary book-now-btn">BOOK NOW</button>
                        </div>
                    </div>
                </div>

                <!-- Room 3 -->
                <div class="room-container">
                    <div class="room-image">
                        <img src="/images/room-3.jpg" alt="Suite Room" class="img-fluid rounded">
                    </div>
                    <div class="room-details" data-price="199">
                        <h2>SUITE ROOM</h2>
                        <p><i class="fas fa-ruler-combined icon"></i><strong>Size:</strong> 50 sqm</p>
                        <p><i class="fas fa-users icon"></i><strong>Max Occupancy:</strong> 4</p>
                        <p><i class="fas fa-wifi icon"></i><strong>Wifi:</strong> Complimentary high-speed wifi</p>
                        <p><i class="fas fa-dollar-sign icon"></i><strong>Price:</strong> $199/night</p>
                        <div class="room-buttons mt-4">
                            <button class="btn btn-primary book-now-btn">BOOK NOW</button>
                        </div>
                    </div>
                </div>

                <!-- Room 4 -->
                <div class="room-container">
                    <div class="room-image">
                        <img src="/images/room-4.jpg" alt="Family Room" class="img-fluid rounded">
                    </div>
                    <div class="room-details" data-price="179">
                        <h2>FAMILY ROOM</h2>
                        <p><i class="fas fa-ruler-combined icon"></i><strong>Size:</strong> 45 sqm</p>
                        <p><i class="fas fa-users icon"></i><strong>Max Occupancy:</strong> 5</p>
                        <p><i class="fas fa-wifi icon"></i><strong>Wifi:</strong> Complimentary high-speed wifi</p>
                        <p><i class="fas fa-dollar-sign icon"></i><strong>Price:</strong> $179/night</p>
                        <div class="room-buttons mt-4">
                            <button class="btn btn-primary book-now-btn">BOOK NOW</button>
                        </div>
                    </div>
                </div>

                <!-- Room 5 -->
                <div class="room-container">
                    <div class="room-image">
                        <img src="/images/room-5.jpg" alt="Single Room" class="img-fluid rounded">
                    </div>
                    <div class="room-details" data-price="79">
                        <h2>SINGLE ROOM</h2>
                        <p><i class="fas fa-ruler-combined icon"></i><strong>Size:</strong> 20 sqm</p>
                        <p><i class="fas fa-users icon"></i><strong>Max Occupancy:</strong> 1</p>
                        <p><i class="fas fa-wifi icon"></i><strong>Wifi:</strong> Complimentary high-speed wifi</p>
                        <p><i class="fas fa-dollar-sign icon"></i><strong>Price:</strong> $79/night</p>
                        <div class="room-buttons mt-4">
                            <button class="btn btn-primary book-now-btn">BOOK NOW</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    
 
    <script src="/js/bookNow.js"></script>
</body>
</html>
